<%- contentFor( 'body' ) %>
    <div class="max-width2">
        <img src="https://wallpapercave.com/wp/wp2132611.jpg" alt="">
    </div>
    <div class="table-responsive-xl fade-in" id="div-all-cadastro">
        <div class="pt-3" id="texto-cad-1">
            <h2 id="texto-cad-1" style="text-align: center;">Usuários Cadastrados</h2>
            <h3 id="texto-cad-2" style="text-align:center;"> Aqui você edita as informações dos usuario!</h3>
        </div>
        <div class="p-5"></div>
        <h3 id="texto-cad-2" style="text-align: center;">Use o scroll do seu mouse para subir as informações!</h3>
        <div class="p-5"></div>



        <div id="table-div">
            <table class="table  container-fluid bg-none" id="list">
                <thead class="thead-light">
                    <tr>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Endereço</th>
                        <th>Idade</th>
                        <th>Altura</th>
                        <th>Vota?</th>
                        <th>Editar</th>
                        <th>Remover</th>
                    </tr>
                </thead>
                <tbody>

                    <% let linkRemove="/cadastro/remove/" ; %>
                        <% let linkUpdate="/cadastro/update/" ; %>

                            <% if(users.length>0){%>
                                <% for(let index=0;index<users.length;index++){ %>
                                    <tr data-index-row="<%= index %>">

                                        <td data-index-row="<%=index%>">
                                            <span class="show">
                                                <%= users[index].name %>
                                            </span>
                                            <input type="text" name="name" class="hidden"
                                                value="<%= users[index].name %>">
                                        </td>
                                        <td data-index-row="<%=index%>">
                                            <span class="show">
                                                <%= users[index].email %>
                                            </span>
                                            <input type="text" name="email" class="hidden"
                                                value="<%= users[index].email %>">
                                        </td>
                                        <td data-index-row="<%=index%>">
                                            <span class="show">
                                                <%= users[index].address %>
                                            </span>
                                            <input type="text" name="address" class="hidden"
                                                value="<%= users[index].address %>">
                                        </td>
                                        <td data-index-row="<%=index%>">
                                            <span class="show">
                                                <%= users[index].age %>
                                            </span>
                                            <input type="number" step="0.1" name="age" class="hidden"
                                                value="<%= users[index].age %>">

                                        </td>
                                        <td data-index-row="<%=index%>">
                                            <span class="show">
                                                <%= users[index].height %>
                                            </span>
                                            <input type="number" name="height" class="hidden"
                                                value="<%= users[index].height %>">

                                        </td>
                                        <td data-index-row="<%=index%>">
                                            <span class="show">
                                                <%= users[index].vote %>
                                            </span>
                                            <input type="text" name="vote" class="hidden"
                                                placeholder="Digite Sim ou Não." value="<%= users[index].vote %>">

                                        </td>
                                        <td data-index-row="<%=index%>" class="hidden" data-index-row="<%=index%>">
                                            <input type="button" value="Atualizar" class="hidden">
                                        </td>

                                        <td data-index-row="<%= index %>">
                                            <a href="#" onclick="update('<%=index%>','<%= linkUpdate %>')"
                                                class="show"><i class="fas fa-pen"></i></a>
                                        </td>

                                        <td data-index-row="<%= index %>">
                                            <a href="#" class="show"
                                                onclick="remove('<%=index %>','<%=users[index].name %>','<%=linkRemove%>')"><i
                                                    class="fas fa-trash-alt"></i></a>
                                        </td>
                                    </tr>
                                    <% } //for %>
                                        <% }else{%>
                                            <tr>
                                                <td colspan="12" id="nothing-date">

                                                    <img src="https://preview.redd.it/7qlgekwwahy21.png?width=640&crop=smart&auto=webp&s=fb213e4ea92d4f495514bac61992ed1e48570097"
                                                        width="200px" alt="">
                                                    <p class="">Não há nenhum dado Cadastrado</p>
                                                </td>
                                            </tr>
                                            <%} //If-Else %>
                </tbody>
            </table>
        </div>
        <div class="p-2"></div>
    </div>

